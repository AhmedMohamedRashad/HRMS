@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}


<h2>Edit Role</h2>


<form asp-controller="Roles" asp-action="Edit" class="form-group">

    <label asp-for="Name">Role Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <center>
        <input type="submit" value="Edit" class="btn btn-primary btn-block" />
    </center>

</form>


<a asp-controller="Roles" asp-action="AddOrRemoveUsers" asp-route-RoleId="@Model.Id">Add Or Remove Users</a>


