@model ApplicationUser

@{
    ViewData["Title"] = "Details";
}
@section BootstrapSelect{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}

<div class="block-header">
    <h2>@Model.UserName Details</h2>
</div>

<form class="form-group" asp-action="Details" asp-controller="Users">
    <input type="hidden" asp-for="Id" />

    <label asp-for="UserName">User Name</label>
    <input type="text" asp-for="UserName" class="form-control" readonly />
    <br />
    <label asp-for="Email">User Email</label>
    <input type="email" asp-for="Email" class="form-control" readonly />
    <br />

<center>
    <a asp-controller="Users" asp-action="Index" class="btn btn-warning">Return</a>
    <a asp-controller="Users" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
    <a asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id"  class="btn btn-danger">Delete</a>

</center>


</form>