@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Layout/AccountLayout.cshtml";
}

<body class="fp-page">
    <div class="fp-box">
        <div class="logo">
            <a href="javascript:void(0);"><b>HRMS</b></a>
        </div>
        <div class="card">
            <div class="body">
                <form asp-controller="Account" asp-action="ForgetPassword">
                    <div class="msg">
                        Enter your email address that you used to register. We'll send you an email with your username and a
                        link to reset your password.
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Email" required autofocus>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <input class="btn btn-block btn-lg bg-pink waves-effect" type="submit" value="RESET MY PASSWORD" />
                    <div class="row m-t-20 m-b--5 align-center">
                        <a asp-controller="Account" asp-action="Login">Sign In!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>


