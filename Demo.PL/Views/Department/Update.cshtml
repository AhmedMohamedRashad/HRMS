@model DepartmentVM

@{
    ViewData["Title"] = "Update";
    
}

<div class="block-header">
    <h2>@Model.Name  Update</h2>
</div>

<p class="text-danger">@TempData["msg"]</p>
<form class="form-group" asp-action="Update" asp-controller="Department">

    <div asp-validation-summary="All" class="text-danger">    </div>
    <input type="hidden" asp-for="Id" />

    @{
        await Html.RenderPartialAsync("~/Views/Partials/Department/CreateUpdate.cshtml");
    }

    <center>
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-controller="Department" asp-action="Index"  class="btn btn-warning">Return</a>

    </center>

</form>
