@model IEnumerable<DepartmentVM>
@{
    ViewData["Title"] = "Department";
}
@section BootstrapSelect{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />

}
<style>
    th {
        text-align: center !important;
    }
</style>

<div class="block-header">
    <h2>Departments</h2>
    <br />
    <a asp-action="Create" class="btn btn-primary"> Create New Department</a>
    <br />

    <table class="table table-hover table-bordered text-center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Code</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="material-icons">visibility</i></a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="material-icons">edit</i></a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="material-icons">delete</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
