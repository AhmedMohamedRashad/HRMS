@model EmployeeVM

<label asp-for="Name">Employee Name</label>
<input type="text" asp-for="Name" class="form-control" readonly/>
<br />
<label asp-for="Email">Employee Email</label>
<input type="email" asp-for="Email" class="form-control" readonly />
<br />
<label asp-for="Address">Employee Address</label>
<input type="text" asp-for="Address" class="form-control" readonly />
<br />
<label asp-for="Salary">Employee Salary</label>
<input type="number" min="3000" max="50000" asp-for="Salary" class="form-control" readonly />
<br />
<label asp-for="Notes">Employee Notes</label>
<textarea asp-for="Notes" rows="4" class="form-control" readonly></textarea>
<br />
<label asp-for="HireDate">Employee HireDate</label>
<input type="text" asp-for="HireDate" id="datepicker" class="form-control" autocomplete="off" readonly />
<br />
<div class="demo-checkbox">
    <input type="checkbox" asp-for="IsActive" readonly />
    <label asp-for="IsActive">IsActive</label>
</div>
<br />
<label asp-for="Department.Name">Employee Department</label>
<input type="text" asp-for="Department.Name" class="form-control" readonly />
<br />

<input type="hidden" asp-for="ImageName" />
<br />
<input type="hidden" asp-for="CvName"  />
<br />

