@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Layout/AccountLayout.cshtml";
}



<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);"><b>HRMS</b></a>
        </div>
        <div class="card">
            <div class="body">
                <form asp-controller="Account" asp-action="Login">
                    <div class="msg">Sign in to start your session</div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Email Address">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            <input type="checkbox" asp-for="RememberMe" id="rememberme" class="filled-in chk-col-pink">
                            <label for="rememberme">Remember Me</label>
                        </div>
                        <div class="col-xs-4">
                           <input class="btn btn-block bg-pink waves-effect" type="submit" value="SIGN IN" />
                        </div>
                    </div>
                    <div class="row m-t-15 m-b--20">
                        <div class="col-xs-6">
                            <a asp-controller="Account" asp-action="Registration">Register Now!</a>
                        </div>
                        <div class="col-xs-6 align-right">
                            <a asp-controller="Account" asp-action="ForgetPassword">Forgot Password?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>